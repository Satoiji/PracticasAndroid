<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.invitado.eva1_8_practica8.Main">

    <RadioGroup
        android:id="@+id/radioGroup_cafes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioButton_americano"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="Americano (20$)" />

        <RadioButton
            android:id="@+id/radioButton_capuchino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Capuchino (48$)" />

        <RadioButton
            android:id="@+id/radioButton_expreso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Expreso (30$)" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cantidad:" />

        <EditText
            android:id="@+id/editText_cantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName|number" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Extras"
        android:textColor="@android:color/background_dark" />

    <CheckBox
        android:onClick="checkbox_click"
        android:id="@+id/checkBox_azucar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Azucar (1$)" />

    <CheckBox
        android:onClick="checkbox_click"
        android:id="@+id/checkBox_crema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crema (1$)" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:elevation="0dp"
            android:paddingLeft="50dp"
            android:text="Descripcion de la compra"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cafe americano"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.65"
        android:orientation="vertical">

        <Button
            android:id="@+id/button"
            android:onClick="button_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total" />

    </LinearLayout>

</LinearLayout>
